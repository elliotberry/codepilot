{
    "name": "@stevenic/codepilot",
    "author": "Steven Ickman",
    "description": "Codepilot is an AI powered programming buddy that's an expert on your codebase.",
    "version": "0.5.0",
    "license": "MIT",
    "type": "module",
    "keywords": [
        "gpt",
        "coding"
    ],
    "bugs": {
        "url": "https://github.com/Stevenic/codepilot/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Stevenic/codepilot.git"
    },
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "bin": {
        "codepilot": "./src/codepilot-cli.js"
    },
    "dependencies": {
        "alphawave": "0.8.2",
        "json-colorizer": "^2.2.2",
        "junk": "^4.0.1",
        "prettier": "^3.3.3",
        "promptrix": "0.4.2",
        "vectra": "^0.4.4",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.5.0",
        "@release-it/bumper": "^6.0.1",
        "@stylistic/eslint-plugin-js": "^1.7.2",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-no-secrets": "^1.0.2",
        "eslint-plugin-perfectionist": "^2.10.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-simple-import-sort": "^12.1.0",
        "eslint-plugin-sonarjs": "^1.0.3",
        "eslint-plugin-unicorn": "^53.0.0",
        "mocha": "10.2.0",
        "nyc": "^15.1.0",
        "prettier": "^3.2.5",
        "release-it": "^17.3.0",
        "shx": "^0.3.2"
    },
    "prettier": {
        "arrowParens": "always",
        "bracketSameLine": true,
        "bracketSpacing": true,
        "semi": false,
        "experimentalTernaries": true,
        "singleQuote": false,
        "jsxSingleQuote": false,
        "quoteProps": "as-needed",
        "trailingComma": "none",
        "singleAttributePerLine": false,
        "htmlWhitespaceSensitivity": "css",
        "vueIndentScriptAndStyle": false,
        "proseWrap": "preserve",
        "insertPragma": false,
        "printWidth": 80,
        "requirePragma": false,
        "tabWidth": 2,
        "useTabs": false,
        "embeddedLanguageFormatting": "auto"
    },
    "scripts": {
        "build-docs": "typedoc --theme markdown --entryPoint codepilot --excludePrivate --includeDeclarations --ignoreCompilerErrors --module amd --out ..\\..\\doc\\botbuilder-ai .\\lib\\index.d.ts --hideGenerator --name \"Bot Builder SDK - AI\" --readme none",
        "build:rollup": "yarn clean && yarn build && api-extractor run --verbose --local",
        "clean": "rimraf _ts3.4 lib tsconfig.tsbuildinfo node_modules",
        "lint": "eslint **/src/**/*.{j,t}s{,x} --fix --no-error-on-unmatched-pattern",
        "test": "npm-run-all build test:mocha",
        "test:mocha": "nyc mocha tests",
        "test:compat": "api-extractor run --verbose"
    },
    "files": [
        "_ts3.4",
        "lib",
        "src"
    ]
}
